package ui

templ GeneralLayout(left, right templ.Component) {
	<div class="flex flex-col lg:flex-row flex-auto min-h-auto lg:min-h-screen lg:max-h-screen p-4 gap-2.5 lg:overflow-hidden">
		@left
		<div class="lg:w-1/2 h-auto flex flex-col lg:overflow-y-auto">
			@right
			@Footer()
		</div>
	</div>
}
