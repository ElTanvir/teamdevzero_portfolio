							<h2 class="text-4xl md:text-6xl font-black mb-6" x-text="service.title"></h2>
							<p class="text-lg md:text-xl mb-6 text-on-surface-dark" x-text="service.desc"></p>
							<span class="inline-block bg-primary-dark/20 text-primary-dark px-4 py-2 rounded-full font-bold" x-text="service.tech"></span>
						</div>
					</div>
				</template>
				<div class="tab-nav">
					<template x-for="(service, index) in services" :key="index">
						<button @click="currentSlide = index" class="tab-nav-item" :class="{'active': currentSlide === index}">
							<span class="border-span"></span><span class="border-span"></span><span class="border-span"></span><span class="border-span"></span>
