                    { title: 'Mobile Apps', desc: 'Stunning, high-performance cross-platform apps built with Flutter.', tech: 'Flutter' },
                    { title: 'Frontend', desc: 'Modern, responsive, and blazing-fast websites for an optimal user experience.', tech: 'Next.js, React, Go+Templ' },
                    { title: 'Backend', desc: 'Scalable, secure, and efficient server-side solutions for your applications.', tech: 'Golang, Node.js, Laravel' },
                    { title: 'WordPress', desc: 'Custom themes, plugins, and full website development on the world\'s most popular CMS.', tech: 'WordPress' }
                ],
                autoplay() {
                    let timer = setInterval(() => {
                        this.currentSlide = (this.currentSlide + 1) % this.services.length;
                    }, 5000);
                    $watch('currentSlide', () => {
                        clearInterval(timer);
                        timer = setInterval(() => { this.currentSlide = (this.currentSlide + 1) % this.services.length; }, 5000);
                    });
                }
             }"
				x-init="autoplay()"
				x-transition:enter="transition ease-out duration-500"
				x-transition:enter-start="opacity-0 scale-95"
				x-transition:enter-end="opacity-100 scale-100"
				x-transition:leave="transition ease-in duration-300"
				x-transition:leave-start="opacity-100 scale-100"
				x-transition:leave-end="opacity-0 scale-95"
